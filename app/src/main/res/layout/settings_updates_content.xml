<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/update_status"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/cheking_updates_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/checking_for_updates"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/updateIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:progressTint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/progessText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/preparing_to_install" />
    </LinearLayout>
    <TextView
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/cancel_update" />
    <TextView
        android:id="@+id/updateInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/update_info" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkForUpdatesBtn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/check_for_updates"
        android:textColor="?attr/colorOnBackground"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:strokeColor="?attr/colorOnBackground"
        app:strokeWidth="2dp" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/UpdateNotifyCheckBox"
        android:layout_width="match_parent"
        android:layout_marginTop="64dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/notify_update"
        android:textSize="18sp" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/AutoUpdateCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/auto_update"
        android:textSize="18sp" />
</LinearLayout>